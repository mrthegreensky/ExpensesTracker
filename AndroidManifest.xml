<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensestracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DestinationActivity"
            android:label="@string/title_activity_destination" >
        </activity>
        <activity
            android:name=".ExpenseActivity"
            android:label="@string/title_activity_expense" >
        </activity>
        <activity
            android:name=".ClaimsActivity"
            android:label="@string/title_activity_claims" >
        </activity>
        <activity
            android:name=".NewExpenseActivity"
            android:label="@string/title_activity_new_expense" >
        </activity>
        <activity
            android:name=".ClaimStatusActivity"
            android:label="@string/title_activity_claim_status" >
        </activity>
    </application>

</manifest>
